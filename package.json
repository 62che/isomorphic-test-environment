{
  "name": "isomorphic-test-environment",
  "version": "1.0.0",
  "description": "",
  "author": {
    "name": "62che",
    "email": "the62che@gmail.com"
  },
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "test": "npm run test:node",
    "test:circleci": "npx cross-env NODE_ENV=test     npx nyc --reporter=text  --reporter=html     npx -c \"mocha-webpack test/**/*.test.js --reporter=mocha-junit-reporter\"",
    "test:node": "npx cross-env NODE_ENV=test     npx -c \"mocha-webpack test/**/*.test.js --watch\"",
    "test:browser": "./node_modules/.bin/cross-env NODE_ENV=test     ./node_modules/.bin/karma start",
    "coverage": "npm run coverage:node && npm run coverage:browser",
    "coverage:node": "npx cross-env NODE_ENV=test     npx nyc --reporter=text --reporter=html     npx -c \"mocha-webpack test/**/*.test.js\"",
    "coverage:browser": "./node_modules/.bin/cross-env NODE_ENV=test COVERAGE=y     ./node_modules/.bin/karma start",
    "build": "npx cross-env NODE_ENV=development webpack",
    "build:production": "npx cross-env NODE_ENV=production webpack"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-plugin-istanbul": "^5.1.0",
    "babel-preset-env": "^1.7.0",
    "chai": "^4.2.0",
    "cross-env": "^5.2.0",
    "istanbul-instrumenter-loader": "^3.0.1",
    "karma": "^3.1.4",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.2",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-webpack": "^3.0.5",
    "mocha": "^5.2.0",
    "mocha-webpack": "^1.1.0",
    "nyc": "^13.1.0",
    "webpack": "^3.12.0"
  },
  "nyc": {
    "sourceMap": false,
    "instrument": false,
    "report-dir": "coverage/node",
    "exclude": [
      "index.js",
      "test/**/*.test.js"
    ]
  },
  "standard": {
    "ignore": [
      "test/**/*.test.js"
    ]
  }
}
